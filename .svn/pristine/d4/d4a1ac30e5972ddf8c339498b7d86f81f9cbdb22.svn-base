<Window x:Class="SOSCSRPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SOSCSRPG"
        mc:Ignorable="d"
        Title="MyGame" Height="768" Width="1024">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Menu" Background="#0d15b5"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Player Data" Background="#6fa9e3"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Game Data" Background="#80c4ad"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Inventory/Quests" Background="#6f65a8"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Combat/Movement Controls" Background="#a2d4e8"/>


    </Grid>
</Window>
